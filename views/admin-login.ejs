<%- include('./Partials/header.ejs') -%>
<link rel="stylesheet" href="css/sign-in.css">
<div class="customsignin">
<div class="middle ">
<form class="form-signin" method="post" action="/admin-login">
    <h1 class="font-weight-normal mb-3 text-center">Login</h1>
    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" id="inputEmail" class="form-control mt-2" placeholder="Email address" name="usremail" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="inputPassword" class="form-control mt-2" placeholder="Password" name="usrpsw" required>
    <button class="btn btn-size btn-primary btn-block mt-2" id="inputEmail" type="submit">Sign in</button>
  </form>
  <% status = auth %>
  <% if(!status) { %>
   <h1>Not authenticated</h1>
  <%}%>
</div>
</div>
</body>

